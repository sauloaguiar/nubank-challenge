<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sauloguiar.nubankchallenge.DialogActivity"
    android:background="@color/background">

    <TextView
        android:id="@+id/dialog_screen_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/titles"
        android:text="@string/dialog_screen_title"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="25sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialog_screen_description"
        android:textColor="@color/texts"
        android:layout_below="@id/dialog_screen_title"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        />

    <Button
        android:id="@+id/dialog_screen_close_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textColor="@color/hint"
        android:background="@android:color/transparent"
        android:text="@string/dialog_screen_close_button"
        android:onClick="onClosePressed"/>

</RelativeLayout>
